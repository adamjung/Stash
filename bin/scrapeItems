#!/usr/bin/env node
const pg = require('pg');
const url = require('url');
const request = require('request-promise');
const newUrls = ['haven','ssense','mrPorter','antonioli','maasandstacks'];

// make 5 post requests to server for every shop in newUrls
for (let i = 0; i < newUrls; i++) {
  let store = newUrls[i];
  let options = {
    uri: `https://www.stash.digital/newItems/${store}`,
    json: true
  }
  request.post(options)
  .then(function(items) {
    console.log('successful post for ', store);
  })
  .catch(function(error) {
    console.log('unsuccessful post for ', store, error);
  });
}

